# Configuración del proyecto
PROJECT_NAME=FinancePro API
VERSION=1.0.0

# Configuración de ambiente
ENVIRONMENT=development
CREATE_SAMPLE_DATA=true

# Base de datos
DATABASE_URL=postgresql://postgres:password@localhost:5432/financepro
POSTGRES_DB=financepro
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Redis
REDIS_URL=redis://localhost:6379/0

# Seguridad
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ENCRYPTION_KEY=your-encryption-key-change-this-in-production-must-be-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Configuración de seguridad adicional
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
PASSWORD_MIN_LENGTH=8
REQUIRE_2FA=true
SESSION_TIMEOUT_MINUTES=60

# Configuración de notificaciones
ENABLE_NOTIFICATIONS=true
EMAIL_NOTIFICATIONS=true
SMS_NOTIFICATIONS=false
ADMIN_EMAIL=admin@financepro.com

# RabbitMQ - Mensajería Asíncrona
RABBITMQ_URL=amqp://financepro:rabbitmq_password@rabbitmq:5672/financepro_vhost
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=financepro
RABBITMQ_PASSWORD=rabbitmq_password
RABBITMQ_VHOST=financepro_vhost

# Meilisearch - Búsqueda de Texto Completo
MEILISEARCH_URL=http://meilisearch:7700
MEILISEARCH_MASTER_KEY=meilisearch_dev_master_key
MEILISEARCH_INDEX_PREFIX=financepro

# Configuración de Búsqueda
ENABLE_FULL_TEXT_SEARCH=true
SEARCH_RESULTS_LIMIT=50
SEARCH_HIGHLIGHT=true

# Configuración de Procesamiento Asíncrono
ENABLE_ASYNC_PROCESSING=true
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# URLs de servicios externos (desarrollo)
RABBITMQ_MANAGEMENT_URL=http://localhost:15672
MEILISEARCH_DASHBOARD_URL=http://localhost:7700

# Configuración de auditoría
ENABLE_AUDIT_LOG=true
AUDIT_LOG_RETENTION_DAYS=365

# Configuración de encriptación
ENCRYPT_PII_DATA=true
DATA_RETENTION_DAYS=2555

# CORS
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Email (opcional)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@financepro.com
EMAILS_FROM_NAME=FinancePro

# Archivos
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760

# Logging y monitoreo
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ENABLE_SENTRY=false

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_LOGIN_ATTEMPTS=5

# Configuración de archivos y uploads
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx
UPLOAD_ENCRYPTION=true

# Configuración de backup
AUTO_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION=true
